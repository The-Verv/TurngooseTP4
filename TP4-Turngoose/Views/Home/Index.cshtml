            <div class="custom-file">
                <span class="btn btn-primary btn-lg">Load this tournament now!</span>
                <input type="file" id="file" class="btn btn-primary btn-lg" />
            </div>
        </p>




    </div><div class="col-md-4">
        <h2>About us</h2>
        <p>
            Learn about the minds behind Turngoose.
        </p>
        <p>@Html.ActionLink("About >>", "About", "Home")</p>
    </div>
    <div class="col-md-4">
        <h2>Contact us</h2>
        <p>You can contact us ANYTIME!</p>
        <p>@Html.ActionLink("Contact >>", "Contact", "Home")</p>
    </div>
   
</div>
